<wxs module="util" src="../getTime.wxs"/>

<view class="nav-bar">
  <view
    wx:for="{{newsType}}"
    wx:key="{{item.type}}"
    class="{{ (item.type === showingType) ? 'current-type' : 'news-type' }}"
    data-type="{{item.type}}"
    bindtap="onTapNewsType"
  >
    {{item.name}}
  </view>
</view>

<scroll-view class="news-list" scroll-y="true">
  <block 
    wx:for="{{newsList}}"
    wx:key="{{item.id}}"
  >
    <view
      class="news-item"
      data-id="{{item.id}}"
      bindtap='onTapNewsList'
    >
      <view class="news-text">
        <text class="title">{{item.title}}</text>
        <view class="source-and-date">
          <text class="source">{{item.source ? item.source : "未知来源"}}</text>
          <text class="date">{{util.getTime(item.date)}}</text>
        </view>
      </view>
      <image
        class="first-image"
        src="{{item.firstImage ? item.firstImage : '/images/img_not_available.png'}}"
        mode="aspectFill" 
      />
    </view>
  </block>
</scroll-view>